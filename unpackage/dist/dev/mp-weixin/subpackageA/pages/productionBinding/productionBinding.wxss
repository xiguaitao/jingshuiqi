.enrollment {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #EFF2F4;
}
.enrollment .content {
  overflow: auto;
  box-shadow: 0rpx 12rpx 28rpx -4rpx rgba(0, 0, 0, 0.1), 0rpx -12rpx 18rpx -14rpx rgba(0, 0, 0, 0.1);
  margin: 32rpx;
}
.enrollment .content .button {
  height: 24px;
  font-size: 28rpx;
}
.enrollment .content .form {
  padding: 32rpx;
  box-sizing: border-box;
  background: #FFFFFF;
  box-shadow: 0rpx 8rpx 20rpx 0rpx #F0F1F2;
  border-radius: 24rpx;
}
.enrollment .checkbox {
  margin: 32rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
}
.enrollment .checkbox text {
  color: #23ADF2;
}
.enrollment .bottom-btn {
  background: #fff;
  margin-top: auto;
}
.enrollment .bottom-btn .btn {
  padding: 24rpx 30rpx;
  box-sizing: border-box;
}
.enrollment .bottom-btn .btn view {
  height: 88rpx;
  background: #2590FA;
  border-radius: 8rpx;
  display: grid;
  place-content: center;
  color: #fff;
}

