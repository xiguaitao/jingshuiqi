.box {
  min-height: 100vh;
  background-color: #F3F5F6;
  overflow: hidden;
}
.address-list {
  margin-top: 32rpx;
}
.address-list .addressList {
  background: #FFFFFF;
  border-radius: 16rpx;
  margin: 24rpx 30rpx;
  padding: 24rpx;
  box-sizing: border-box;
}
.address-list .addressList .name-pron {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #2E3033;
}
.address-list .addressList .name-pron .pron {
  margin-left: 16rpx;
}
.address-list .addressList .address-icon {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 16rpx;
  padding-bottom: 32rpx;
  border-bottom: 2rpx solid #F1F2F2;
}
.address-list .addressList .address-icon .address {
  font-size: 28rpx;
  color: #616366;
}
.address-list .addressList .address-icon .icon image {
  width: 48rpx;
  height: 48rpx;
}
.address-list .addressList .text-img-icon {
  display: flex;
  align-items: center;
  margin-top: 24rpx;
}
.address-list .addressList .text-img-icon .default {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #2590FA;
}
.address-list .addressList .text-img-icon .cop {
  margin-left: auto;
  margin-right: 32rpx;
}
.address-list .addressList .text-img-icon .text {
  font-size: 24rpx;
  color: #B1B2B2;
  display: flex;
  align-items: center;
}
.address-list .addressList .text-img-icon .text image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}
.save_btn {
  width: 690rpx;
  height: 88rpx;
  position: fixed;
  bottom: 98rpx;
  margin-left: 32rpx;
}
.save_btn button {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFFFFF;
  background: #2590FA;
  border-radius: 25px;
}
.popur {
  width: 552rpx;
  height: 264rpx;
  background: #FFFFFF;
  border-radius: 16rpx 16rpx 16rpx 16rpx;
  padding: 48rpx;
  box-sizing: border-box;
}
.popur .delete {
  font-size: 28rpx;
  color: #14171A;
  text-align: center;
}
.popur .cance-sbmer {
  display: flex;
  justify-content: center;
  margin-top: 64rpx;
}
.popur .cance-sbmer .cance {
  width: 216rpx;
  height: 64rpx;
  border-radius: 100rpx 100rpx 100rpx 100rpx;
  font-size: 28rpx;
  color: #14171A;
  line-height: 64rpx;
  text-align: center;
  border: 2rpx solid #B5B6B6;
}
.popur .cance-sbmer .sbmer {
  background: #2590FA;
  border: none;
  margin-left: 24rpx;
  color: #FFF;
}

