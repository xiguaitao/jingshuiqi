.box {
  background-color: #F0F3F5;
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow: auto;
}
.kaPian {
  position: relative;
  height: 160rpx;
  margin: 0 32rpx;
  margin-bottom: 48rpx;
}
.kaPian .kaPian-bnt {
  position: absolute;
  bottom: -15%;
  left: 3%;
  width: 94%;
  height: 60rpx;
  margin: 0 32rpx;
  background: rgba(89, 134, 178, 0.5);
  border-radius: 8rpx 8rpx 8rpx 8rpx;
  -webkit-filter: blur(20px);
          filter: blur(20px);
}
.kaPian image {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0%;
  left: 0%;
}
.kaPian .money-number-balance {
  position: relative;
  height: 100%;
  padding: 24rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.kaPian .money-number-balance .number-balance {
  text-align: center;
}
.kaPian .money-number-balance .number-balance .number {
  font-weight: 600;
  font-size: 44rpx;
  color: #FFFFFF;
}
.kaPian .money-number-balance .number-balance .balance {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}
.text-icon-income-expenditure {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-right: 32rpx;
}
.text-icon-income-expenditure .text-icon {
  display: flex;
  align-items: center;
}
.text-icon-income-expenditure .text-icon .text {
  font-size: 24rpx;
  color: #616466;
}
.text-icon-income-expenditure .text-icon .number-icon {
  display: flex;
  align-items: center;
}
.text-icon-income-expenditure .text-icon .number-icon .number {
  font-size: 28rpx;
  color: #1DABF2;
}
.subsection-device {
  flex: 1;
  overflow: auto;
  display: flex;
  flex-direction: column;
}
.subsection-device .subsection {
  margin: 0 32rpx;
}
.subsection-device .subsection .u-subsection {
  padding: 8rpx;
  box-sizing: border-box;
}
.subsection-device .device {
  flex: 1;
  width: 100%;
  height: 0px;
  overflow: hidden;
}
.subsection-device .device .content {
  flex: 1;
  overflow: auto;
}
.subsection-device .device .nodata {
  display: grid;
  place-content: center;
  height: 100%;
}
.subsection-device .device .nodata .contents {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.subsection-device .device .nodata .contents image {
  width: 150px;
  height: 114px;
}
.subsection-device .device .nodata .contents .text {
  font-size: 20rpx;
}
.icon-shoho {
  position: fixed;
  right: 32rpx;
  bottom: 30%;
}
.icon-shoho image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}

