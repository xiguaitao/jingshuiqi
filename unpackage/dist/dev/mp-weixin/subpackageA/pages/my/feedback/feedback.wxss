.box {
  height: 100%;
  background-color: #F0F3F5;
  overflow: hidden;
}
.conter {
  background: #FFFFFF;
  box-shadow: 0rpx 12rpx 28rpx -4rpx rgba(0, 0, 0, 0.1), 0rpx -12rpx 18rpx -14rpx rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  margin: 48rpx 32rpx;
  padding: 32rpx;
  box-sizing: border-box;
}
.conter .text-kh {
  font-family: PingFang SC, PingFang SC;
}
.conter .text-kh .text {
  font-weight: 500;
  font-size: 28rpx;
  color: #2E3133;
}
.conter .text-kh .kh {
  font-size: 24rpx;
  color: #616466;
}
.conter .textarea {
  margin-top: 26rpx;
}
.conter .textarea  .u-textarea {
  background-color: #F0F3F5 !important;
}
.conter .uploads {
  margin-top: 70rpx;
}
.conter .upload {
  margin-top: 26rpx;
}
.conter .input {
  margin-top: 26rpx;
}
.conter .input  .u-input {
  padding: 20rpx !important;
  box-sizing: border-box;
  background-color: #F0F3F5 !important;
}
.btn {
  width: 100%;
  background-color: #FFFFFF;
  position: fixed;
  bottom: 0%;
  left: 0%;
  padding: 32rpx;
  box-sizing: border-box;
}
.btn .text {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-family: PingFang SC, PingFang SC;
  font-weight: 500;
  font-size: 32rpx;
  color: #FFFFFF;
  background: #1DABF2;
}

