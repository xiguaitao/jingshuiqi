.box {
  height: 100%;
  background-color: #F0F3F5;
}
.myEarnings-content {
  padding: 0 32rpx;
  box-sizing: border-box;
}
.myEarnings-content .card {
  position: relative;
  height: 174rpx;
  box-shadow: 0rpx 8rpx 16rpx 0rpx rgba(3, 18, 26, 0.05);
}
.myEarnings-content .card image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.myEarnings-content .card .card-content {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  padding: 32rpx;
  box-sizing: border-box;
  color: #fff;
}
.myEarnings-content .card .card-content .number {
  margin-bottom: 16rpx;
  font-family: PingFang SC, PingFang SC;
  font-weight: 500;
  font-size: 32rpx;
  color: #FFFFFF;
  line-height: 38rpx;
}
.myEarnings-content .card .card-content .ts {
  font-family: PingFang SC, PingFang SC;
  font-weight: 400;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 33rpx;
}
.myEarnings-content .card .card-content .txian {
  width: 202rpx;
  height: 56rpx;
  position: absolute;
  right: 0;
  top: 0;
  padding: 14rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: PingFang SC, PingFang SC;
  font-weight: 400;
  font-size: 28rpx;
  color: #2E3133;
  line-height: 33rpx;
}
.myEarnings-content .time {
  margin: 64rpx 0;
  display: flex;
  justify-content: space-between;
}
.myEarnings-content .time .time-left {
  display: flex;
}
.myEarnings-content .time .time-left view:nth-child(1) {
  font-family: PingFang SC, PingFang SC;
  font-weight: 400;
  font-size: 24rpx;
  color: #616466;
  line-height: 28rpx;
}
.myEarnings-content .time .time-left view:nth-child(2) {
  font-family: PingFang SC, PingFang SC;
  font-weight: 500;
  font-size: 28rpx;
  color: #1DABF2;
  line-height: 33rpx;
}
.myEarnings-content .time .time-right {
  display: flex;
  align-items: center;
  font-family: PingFang SC, PingFang SC;
  font-weight: 400;
  font-size: 28rpx;
  color: #1DABF2;
  line-height: 33rpx;
}
.myEarnings-content .tiemlines {
  padding-bottom: 64rpx;
}

