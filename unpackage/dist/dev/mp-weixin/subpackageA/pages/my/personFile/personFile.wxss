.box {
  height: 100%;
  background-color: #F0F3F5;
  padding-bottom: 234rpx;
  box-sizing: border-box;
}
.g-container {
  position: relative;
  width: 686rpx;
  background-color: #FFF;
  border-radius: 12rpx;
  margin: 160rpx auto;
}
.g-container .g-bottom {
  position: absolute;
  left: 0;
  right: 0;
  background: #FFF;
  padding: 32rpx;
  box-sizing: border-box;
}
.g-container .g-bottom .icon {
  position: absolute;
  width: 128rpx;
  height: 128rpx;
  background-color: red;
  border-radius: 50%;
  left: 50%;
  top: 0;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  border: 20rpx solid #F0F3F5;
}
.g-container .g-bottom .icon::after, .g-container .g-bottom .icon::before {
  content: '';
  position: absolute;
  background: transparent;
  box-shadow: 2rpx -20rpx 0 0 #F0F3F5;
}
.g-container .g-bottom .icon::after {
  top: 50%;
  left: -44rpx;
  width: 40rpx;
  height: 40rpx;
  border-top-right-radius: 40rpx;
}
.g-container .g-bottom .icon:before {
  top: 50%;
  right: -44rpx;
  width: 40rpx;
  height: 40rpx;
  border-top-left-radius: 40rpx;
}
.g-container .g-bottom .text-icon3 {
  margin-top: 130rpx;
}
.g-container .g-bottom .text-icon3 .text-icon:last-child {
  border-bottom: none;
}
.g-container .g-bottom .text-icon3 .text-icon {
  height: 72rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #F0F3F5;
  margin-top: 32rpx;
}
.g-container .g-bottom .text-icon3 .text-icon .text {
  font-size: 28rpx;
  color: #616466;
}
.g-container .g-bottom .text-icon3 .text-icon .text-icon-image {
  display: flex;
  align-items: center;
}
.g-container .g-bottom .text-icon3 .text-icon .text-icon-image .text {
  font-size: 28rpx;
  color: #14181A;
  margin-right: 16rpx;
}
.g-container .g-bottom .text-icon3 .text-icon .text-icon-image image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}
.g-container .g-bottom .condition {
  font-size: 32rpx;
  color: #2E3133;
  font-family: PingFang SC, PingFang SC;
}
