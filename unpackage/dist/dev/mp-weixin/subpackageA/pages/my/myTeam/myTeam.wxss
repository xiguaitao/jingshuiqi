.box {
  height: 100%;
  background-color: #F0F3F5;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.scrollView {
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  margin-bottom: 48rpx;
}
.scrollView .scroll-view_H {
  white-space: nowrap;
  width: 100%;
}
.scrollView .scroll-list {
  display: flex;
  align-items: center;
}
.scrollView .scroll-list .scroll-view-item {
  margin-right: 24rpx;
  text-align: center;
  height: 72rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
}
.scrollView .scroll-list .scroll-view-item_H {
  line-height: 72rpx;
  background: #E1F2FA;
  border: 2rpx solid #1DABF2;
  color: #1DABF2;
}
.scrollView .scroll-list .scroll-view-item_N {
  line-height: 72rpx;
  background: #FFFFFF;
  color: #2E3133;
  border: 2rpx solid #FFF;
}
.tuandui {
  height: 160rpx;
  margin: 0 32rpx 64rpx;
  position: relative;
}
.tuandui image {
  position: absolute;
  top: 0%;
  left: 0;
  width: 100%;
  height: 100%;
}
.tuandui .text-number-text {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  height: 100%;
}
.tuandui .text-number-text .number-text {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.tuandui .text-number-text .number-text .number {
  font-weight: 600;
  font-size: 44rpx;
  color: #FFFFFF;
}
.tuandui .text-number-text .number-text .text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}
