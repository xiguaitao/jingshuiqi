.deviceList .content {
  background: #FFFFFF;
  box-shadow: 0rpx 8rpx 20rpx 0rpx #F0F1F2;
  border-radius: 16rpx;
  margin: 24rpx 30rpx;
  padding: 24rpx;
  box-sizing: border-box;
}
.deviceList .content .code {
  color: #616366;
  font-size: 28rpx;
}
.deviceList .content .devicecod-number-online-normal {
  display: flex;
  font-size: 28rpx;
}
.deviceList .content .devicecod-number-online-normal .code {
  color: #616366;
}
.deviceList .content .devicecod-number-online-normal .number {
  color: #14171A;
  margin-left: 24rpx;
}
.deviceList .content .devicecod-number-online-normal .online {
  font-size: 24rpx;
  color: #14171A;
  margin-left: auto;
  position: relative;
}
.deviceList .content .devicecod-number-online-normal .online::after {
  content: "";
  width: 12rpx;
  height: 12rpx;
  background: var(--point);
  border-radius: 50%;
  position: absolute;
  left: -20rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.deviceList .content .devicecod-number-online-normal .normal {
  font-size: 24rpx;
  color: #14171A;
  margin-left: 44rpx;
  position: relative;
}
.deviceList .content .devicecod-number-online-normal .normal::after {
  content: "";
  width: 12rpx;
  height: 12rpx;
  background: var(--point);
  border-radius: 50%;
  position: absolute;
  left: -20rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.deviceList .content .code-input {
  display: flex;
  align-items: center;
  margin-top: 24rpx;
}
.deviceList .content .code-input .input {
  margin-left: 24rpx;
  width: 272rpx;
  border-bottom: 2rpx solid #616366;
  font-size: 28rpx;
  color: #14171A;
}
.deviceList .content .code-input .input .placeholder {
  font-size: 28rpx;
  color: #B1B2B2;
}
.deviceList .content .code-text {
  display: flex;
  align-items: center;
  margin-top: 24rpx;
}
.deviceList .content .code-text .text {
  margin-left: 24rpx;
  font-size: 28rpx;
  color: #14171A;
}
.deviceList .content .code-text .money {
  color: #FA4225;
}
.deviceList .content .buttons {
  display: flex;
  justify-content: flex-end;
}
.deviceList .content .buttons view {
  width: 176rpx;
  height: 72rpx;
  background: var(--color);
  border-radius: 8rpx;
  margin-left: 24rpx;
  font-size: 28rpx;
  color: var(--text-color);
  text-align: center;
  line-height: 72rpx;
  margin-top: 24rpx;
}
.deviceList .content .buttons .recharged {
  background: #FA6B05;
  color: #fff;
}
.deviceList .content .buttons .shoho {
  border: 2rpx solid #1DABF2;
  color: #1DABF2;
  font-weight: 500;
  font-size: 28rpx;
}

