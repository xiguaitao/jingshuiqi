.box {
  background-color: #F3F5F6;
  display: flex;
  flex-direction: column;
  height: 100%;
}
.box .header {
  height: 176rpx;
  overflow: hidden;
  position: relative;
}
.box .header .bg {
  height: 100%;
}
.box .header .bg image {
  width: 100%;
  height: 100%;
}
.box .header .navbar {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.box .header .navbar .search {
  width: 438rpx;
  height: 72rpx;
  background: #FFFFFF;
  border-radius: 100rpx 100rpx 100rpx 100rpx;
  -webkit-transform: translateX(-60rpx);
          transform: translateX(-60rpx);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0rpx 24rpx;
  box-sizing: border-box;
}
.box .header .navbar .search  .u-border {
  border: none !important;
}
.box .subsection-device {
  flex: 1;
  overflow: auto;
  display: flex;
  flex-direction: column;
}
.box .subsection-device .subsection {
  margin: 0 32rpx;
}
.box .subsection-device .subsection .u-subsection {
  padding: 8rpx;
  box-sizing: border-box;
}
.box .subsection-device .device {
  flex: 1;
  margin-top: 32rpx;
  width: 100%;
  height: 0px;
  overflow: hidden;
}
.box .subsection-device .device .content {
  flex: 1;
  overflow: auto;
}
.box .subsection-device .device .nodata {
  display: grid;
  place-content: center;
  height: 100%;
}
.box .subsection-device .device .nodata .contents {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.box .subsection-device .device .nodata .contents image {
  width: 150px;
  height: 114px;
}
.box .subsection-device .device .nodata .contents .text {
  font-size: 20rpx;
}
.box .bnt {
  width: 100%;
  height: 204rpx;
  background: #FFFFFF;
  box-shadow: 0rpx -4rpx 20rpx -4rpx rgba(100, 101, 102, 0.1);
  padding: 24rpx 32rpx;
  box-sizing: border-box;
}
.box .bnt .text {
  width: 686rpx;
  height: 88rpx;
  border-radius: 8rpx;
  background: #1DABF2;
  text-align: center;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #FFFFFF;
}

