.box {
  height: 100%;
  background-color: #F0F3F5;
}
.lists {
  padding: 52rpx 32rpx 32rpx;
  box-sizing: border-box;
  background: radial-gradient(circle at left top, transparent 20rpx, #fff 0) left top, radial-gradient(circle at right top, transparent 20rpx, #fff 0) right top;
  background-repeat: no-repeat;
  background-size: 60% 100%;
  border-radius: 8rpx;
  margin: 0 32rpx;
}
.lists .dashedline {
  padding: 52rpx 0;
  box-sizing: border-box;
  position: relative;
}
.lists .dashedline .conter {
  border: 2rpx dashed #C8CBCC;
}
.lists .dashedline::after, .lists .dashedline::before {
  content: "";
  width: 56rpx;
  height: 56rpx;
  position: absolute;
  background-color: #F0F3F5;
  border-radius: 50%;
  top: 0;
}
.lists .dashedline::after {
  left: 0;
  -webkit-transform: translate(-100%, 50%);
          transform: translate(-100%, 50%);
}
.lists .dashedline::before {
  right: 0;
  -webkit-transform: translate(100%, 50%);
          transform: translate(100%, 50%);
}
.lists .list {
  display: flex;
  margin-bottom: 24rpx;
}
.lists .list .list-name {
  font-family: PingFang SC, PingFang SC;
  font-weight: 400;
  font-size: 28rpx;
  color: #616466;
  line-height: 33rpx;
  margin-right: 24rpx;
}
.lists .list .list-content {
  flex: 1;
  font-family: PingFang SC, PingFang SC;
  font-weight: 400;
  font-size: 28rpx;
  color: #14181A;
  line-height: 33rpx;
}

