.dian {
  width: 132rpx;
  height: 52rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 0rpx 8rpx 0rpx rgba(76, 76, 77, 0.2);
  font-size: 24rpx;
  color: #2E3033;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.dian .shou {
  width: 44rpx;
  height: 52rpx;
  background: #2590FA;
  color: #FFFFFF;
  text-align: center;
  line-height: 52rpx;
}
.dian .text {
  width: 88rpx;
  height: 52rpx;
  text-align: center;
  line-height: 52rpx;
}
.box {
  min-height: 100vh;
}
.drawer {
  height: 20vh;
  padding: 32rpx;
  box-sizing: border-box;
}
.drawer .image-text-cop {
  display: flex;
  align-items: center;
}
.drawer .image-text-cop .image image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 4rpx;
  vertical-align: middle;
}
.drawer .image-text-cop .text {
  margin-left: 24rpx;
  font-size: 28rpx;
  color: #2E3033;
}
.drawer .image-text-cop .text text {
  color: #2590FA;
}
.drawer .image-text-cop .cop {
  width: 72rpx;
  height: 36rpx;
  background: #F4F5F6;
  border-radius: 100rpx 100rpx 100rpx 100rpx;
  font-size: 20rpx;
  color: #2E3033;
  text-align: center;
  line-height: 36rpx;
  margin-left: auto;
}
.drawer .arddss {
  margin-top: 48rpx;
}
.drawer .arddss .image image {
  width: 48rpx;
  height: 48rpx;
}
.drawer .arddss .text-number {
  margin-left: 24rpx;
  flex: 1;
}
.drawer .arddss .text-number .texts {
  font-size: 28rpx;
  color: #2E3033;
  display: flex;
}
.drawer .arddss .text-number .texts .cop {
  width: 72rpx;
  height: 36rpx;
  background: #F4F5F6;
  border-radius: 100rpx 100rpx 100rpx 100rpx;
  font-size: 20rpx;
  color: #2E3033;
  text-align: center;
  line-height: 36rpx;
  margin-left: auto;
}
.drawer .arddss .text-number .number {
  font-size: 28rpx;
  color: #2E3033;
  margin-top: 8rpx;
  display: flex;
}
.drawer .arddss .text-number .number .address {
  width: 530rpx;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.drawer .arddss .text-number .number .addresss {
  width: 530rpx;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}
.drawer .arddss .text-number .number .copoff {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.drawer .steps {
  margin-top: 48rpx;
}
.drawer .steps  .uni-steps__column-title {
  font-size: 28rpx !important;
}
.drawer .steps  .uni-steps__column-desc {
  margin-top: 8rpx;
}

