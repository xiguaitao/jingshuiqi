.box {
  height: 100%;
  background-color: #F3F5F6;
}
.tr-th {
  border-radius: 8rpx;
  margin: 0 32rpx;
  font-family: PingFang SC, PingFang SC;
}
.tr-th .tito {
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 2rpx solid #F0F1F2;
  height: 80rpx;
}
.tr-th .tito .text {
  display: flex;
  align-items: center;
  font-weight: 600;
  font-size: 32rpx;
  color: #14181A;
  flex: 1;
  justify-content: space-evenly;
}
.tr-th .td-conter-text {
  font-size: 28rpx;
  color: #2E3133;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 72rpx;
}
.tr-th .td-conter-text .text {
  flex: 1;
  text-align: center;
}
.tr-th .td-conter-text .text .content-tito {
  min-width: 230rpx;
  background: rgba(0, 0, 0, 0.5) rgba(0, 0, 0, 0.2);
  text-align: center;
  word-wrap: break-word;
  word-break: break-all;
}
.tr-th .td-conter-text .text .content-tito .tito-text {
  font-weight: 500;
  font-size: 28rpx;
  color: #FFFFFF;
}
.tr-th .td-conter-text .text .content-tito .text-tooltip {
  font-size: 24rpx;
  color: #FFFFFF;
  margin-top: 24rpx;
}
.tr-th .td-conter-text .sakes {
  color: #1DABF2;
}
.tr-th .td-conter-text .sakes  .uni-tooltip {
  display: flex;
  justify-content: center;
}

