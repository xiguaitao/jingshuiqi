.request-refund {
  padding: 32rpx;
  box-sizing: border-box;
}
.request-refund > view:not(:last-child) {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-sizing: border-box;
}
.request-refund .information-on-items {
  font-family: PingFang SC, PingFang SC;
  font-weight: 500;
  font-size: 28rpx;
  color: #14171A;
  line-height: 33rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}
.request-refund .information-on-items .content {
  display: flex;
  margin-top: 24rpx;
}
.request-refund .information-on-items .content .image {
  width: 168rpx;
  height: 168rpx;
  margin-right: 16rpx;
  border-radius: 12rpx;
  overflow: hidden;
}
.request-refund .information-on-items .content .info {
  flex: 1;
}
.request-refund .information-on-items .content .info > view {
  margin-bottom: 10rpx;
}
.request-refund .information-on-items .content .info .name {
  display: flex;
  justify-content: space-between;
}
.request-refund .information-on-items .content .info .name .left {
  color: #2E3033;
}
.request-refund .information-on-items .content .info .name .right {
  font-weight: 400;
  color: #616366;
}
.request-refund .information-on-items .content .info .cyclicality,
.request-refund .information-on-items .content .info .model {
  font-weight: 400;
  font-size: 24rpx;
  color: #616366;
}
.request-refund .information-on-items .content .info .price {
  font-weight: 400;
  font-size: 24rpx;
  display: flex;
  justify-content: flex-end;
}
.request-refund .information-on-items .content .info .price label {
  color: #FA6B05;
}
.request-refund .information-on-items .content .info .price label label {
  font-size: 32rpx;
}
.request-refund .refund-info {
  overflow: auto;
}
.request-refund .refund-info .list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
}
.request-refund .refund-info .list .title {
  font-family: PingFang SC, PingFang SC;
  font-weight: 400;
  font-size: 28rpx;
  color: #616366;
  line-height: 33rpx;
}
.request-refund .refund-info .list .refund-money {
  font-family: PingFang SC, PingFang SC;
  font-weight: 500;
  font-size: 32rpx;
  color: #FA4225;
  line-height: 38rpx;
}
.request-refund .refund-info .list:last-child {
  flex-direction: column;
  align-items: start;
}
.request-refund .refund-info .list:last-child  .u-textarea.data-v-09988a29 {
  background: #F4F5F6;
}
.request-refund .refund-info .list:last-child .title {
  margin-bottom: 24rpx;
}
.request-refund .refund-info .list:last-child .content {
  flex: 1;
  width: 100%;
  background: #F4F5F6;
  border-radius: 16rpx;
}
.request-refund .submit-btn {
  width: 100%;
  position: -webkit-sticky;
  position: sticky;
  bottom: 0;
  margin-top: 48rpx;
  position: relative;
}
