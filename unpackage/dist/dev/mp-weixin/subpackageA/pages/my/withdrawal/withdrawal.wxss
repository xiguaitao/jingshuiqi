.conter {
  background: #FFFFFF;
  border-radius: 8rpx;
  margin: 48rpx 32rpx;
  position: relative;
  padding: 32rpx;
  box-sizing: border-box;
  font-family: PingFang SC, PingFang SC;
}
.conter .tx {
  font-size: 28rpx;
  color: #2E3033;
}
.conter .input {
  height: 160rpx;
  border-bottom: 2rpx solid #F1F2F2;
  display: flex;
  align-items: center;
}
.conter .input .inputs {
  height: 100%;
  font-size: 80rpx;
  color: #14171A;
  flex: 1;
}
.conter .input .text {
  margin-left: auto;
  font-size: 28rpx;
  color: #2590FA;
}
.conter .text-icon {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 32rpx;
}
.conter .text-icon .text {
  font-size: 28rpx;
  color: #2E3033;
}
.conter .text-icon .icon {
  font-size: 28rpx;
  color: #14171A;
}
.conter .bont {
  height: 88rpx;
  background: #2590FA;
  border-radius: 8rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 88rpx;
  margin-top: 80rpx;
}
.poputView {
  height: 800rpx;
  background: #F4F5F6;
  border-radius: 32rpx 32rpx 0 0;
}
.poputView .text-icon {
  display: flex;
  align-items: center;
  padding: 32rpx 30rpx;
  box-sizing: border-box;
}
.poputView .text-icon .text {
  margin-left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.poputView .text-icon .icon {
  margin-left: auto;
}
.poputView .block {
  background: #FFFFFF;
  box-shadow: 0rpx 8rpx 20rpx 0rpx #F0F1F2;
  border-radius: 16rpx;
  margin: 0 30rpx;
  padding: 30rpx;
  box-sizing: border-box;
}
.poputView .block .yhblock {
  height: 260rpx;
  overflow-y: auto;
}
.poputView .block .yhblock .blockList:first-child {
  margin-top: 0rpx;
}
.poputView .block .yhblock .blockList {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 72rpx;
  border-bottom: 2rpx solid #F1F2F2;
  margin-top: 24rpx;
}
.poputView .block .yhblock .blockList .default {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #2590FA;
}
.poputView .bolk-text {
  display: flex;
  align-items: center;
  margin-top: 28rpx;
}
.poputView .bolk-text .image image {
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
}
.poputView .bolk-text .text {
  font-size: 28rpx;
  color: #14171A;
  margin-left: 24rpx;
}

