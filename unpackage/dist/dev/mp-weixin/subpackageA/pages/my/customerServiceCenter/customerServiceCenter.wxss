.box {
  min-height: 100vh;
  background-color: #F2F4F5;
}
.hi-log {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #3099F2;
}
.hi-log .text-hi .text {
  font-weight: 600;
  font-size: 36rpx;
  color: #2E3033;
  margin-bottom: 24rpx;
}
.hi-log .image image {
  width: 300rpx;
  height: 300rpx;
}
.contact {
  height: 364rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  margin: -50rpx 30rpx;
  padding: 32rpx;
  box-sizing: border-box;
  box-shadow: 0rpx 30rpx 30rpx 0rpx #D8DBDC;
}
.contact .conct {
  font-weight: 600;
  font-size: 32rpx;
  color: #14171A;
}
.contact .qq-pant-cop {
  display: flex;
  font-size: 28rpx;
  margin-top: 24rpx;
}
.contact .qq-pant-cop .qq {
  color: #616366;
}
.contact .qq-pant-cop .pant {
  color: #2E3033;
  margin-left: 24rpx;
}
.contact .qq-pant-cop .cop {
  width: 72rpx;
  height: 36rpx;
  background: #F4F5F6;
  border-radius: 100rpx;
  font-size: 20rpx;
  color: #2E3033;
  text-align: center;
  line-height: 36rpx;
  margin-left: 24rpx;
}
.contact .qq-pant-cop .text {
  margin-left: 24rpx;
  color: #2590FA;
}
.whatyouwant {
  background: #FFFFFF;
  border-radius: 16rpx;
  margin: 98rpx 30rpx;
  padding: 32rpx;
  box-sizing: border-box;
  box-shadow: 0rpx 8rpx 20rpx 0rpx #F0F1F2;
}
.whatyouwant .content {
  padding: 15px;
  box-sizing: border-box;
}

