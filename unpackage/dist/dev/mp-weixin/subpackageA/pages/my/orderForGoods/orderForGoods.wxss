.box {
  background-color: #F3F5F6;
  display: flex;
  flex-direction: column;
  height: 100%;
}
.box .header {
  height: 176rpx;
  overflow: hidden;
  position: relative;
}
.box .header .bg {
  height: 100%;
}
.box .header .bg image {
  width: 100%;
  height: 100%;
}
.box .header .navbar {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.box .header .navbar .search {
  width: 438rpx;
  height: 72rpx;
  background: #FFFFFF;
  border-radius: 100rpx 100rpx 100rpx 100rpx;
  -webkit-transform: translateX(-60rpx);
          transform: translateX(-60rpx);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0rpx 24rpx;
  box-sizing: border-box;
}
.box .header .navbar .search  .u-border {
  border: none !important;
}
.box .main {
  flex: 1;
  overflow: auto;
}
.box .nodata {
  display: grid;
  place-content: center;
  height: 100%;
  margin-top: 32rpx;
}
.box .nodata .content {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.box .nodata .content image {
  width: 150px;
  height: 114px;
}
.box .nodata .content .text {
  font-size: 20rpx;
}
.tito {
  height: 208rpx;
  background: linear-gradient(360deg, rgba(212, 231, 250, 0) 0%, #D4E7FA 100%);
  display: flex;
  overflow: hidden;
}
.tito .icons {
  height: 72rpx;
  margin-left: 30rpx;
  line-height: 72rpx;
}
.tito .selected {
  width: 438rpx;
  height: 72rpx;
  background: #FFF;
  border-radius: 100rpx;
  margin-left: 30rpx;
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  box-sizing: border-box;
}
.tito .selected .input {
  margin-left: 16rpx;
}
.tito .selected .iconX {
  margin-left: auto;
}
.currently {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 500rpx;
}
.currently .currentlys {
  font-size: 32rpx;
  color: #B1B2B2;
}
.currently .text {
  width: 232rpx;
  height: 72rpx;
  background: #2590FA;
  border-radius: 100rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 72rpx;
  color: #FFFFFF;
  margin-top: 16rpx;
}
.commodity {
  margin-top: 24rpx;
}
.commodity .conten:first-child {
