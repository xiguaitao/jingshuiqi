.contenList {
  padding: 0 30rpx;
  box-sizing: border-box;
}
.contenList .conten {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  box-sizing: border-box;
  margin-top: 24rpx;
  box-shadow: 0rpx 8rpx 16rpx 0rpx rgba(3, 18, 26, 0.05);
}
.contenList .conten .text-number:first-child {
  margin-top: 0rpx;
}
.contenList .conten .text-number {
  display: flex;
  align-items: center;
  margin-top: 24rpx;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC;
}
.contenList .conten .text-number .text {
  font-weight: 500;
  color: #14181A;
}
.contenList .conten .text-number .code {
  font-size: 24rpx;
  color: #616466;
  margin-top: 24rpx;
}
.contenList .conten .text-number .recharge {
  font-size: 24rpx;
  color: #2590FA;
  margin-left: auto;
}

