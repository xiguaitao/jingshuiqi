.box {
  background-color: #F0F3F5;
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow: auto;
}
.dcontract-text {
  margin: 48rpx 32rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.dcontract-text .text {
  font-weight: 600;
  font-size: 32rpx;
  color: #14181A;
  font-family: PingFang SC, PingFang SC;
}
.dcontract-text .dcontract {
  background-color: #FFF;
  overflow-y: auto;
  border-radius: 8rpx;
  margin-top: 32rpx;
  flex: 1;
}
.bnt {
  background: #FFFFFF;
  box-shadow: 0rpx -4rpx 20rpx -4rpx rgba(100, 101, 102, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.bnt .text {
  height: 88rpx;
  background: #1DABF2;
  border-radius: 8rpx;
  margin: 32rpx;
  line-height: 88rpx;
  text-align: center;
  color: #FFF;
  flex: 1;
}
.bnt .deny {
  border: 2rpx solid #1DABF2;
  color: #1DABF2;
  background-color: #FFF;
}
.popup .denys {
  width: 552rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.popup .denys .padd {
  padding: 0 48rpx;
  box-sizing: border-box;
}
.popup .denys .text-yy {
  font-weight: 600;
  font-size: 32rpx;
  color: #14181A;
  margin-top: 48rpx;
}
.popup .denys .textarea {
  margin-top: 24rpx;
}
.popup .denys .textarea  .u-textarea {
  background-color: #F0F3F5;
}
.popup .denys .btn {
  height: 92rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-top: 2rpx solid #E1E4E6;
  margin-top: 48rpx;
}
.popup .denys .btn .text {
  font-size: 32rpx;
  color: #14181A;
  flex: 1;
  text-align: center;
  height: 100%;
  line-height: 92rpx;
}
.popup .denys .btn .sbmer {
  color: #1DABF2;
}

