.box {
  min-height: 100vh;
  background-color: #F0F3F5;
  padding-bottom: 200rpx;
  box-sizing: border-box;
}
.tito {
  position: absolute;
  top: 0;
  width: 100%;
}
.image-tito image {
  width: 100%;
  height: 750rpx;
}
.thebag {
  min-height: 614rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 12rpx 28rpx -4rpx rgba(0, 0, 0, 0.1), 0rpx -12rpx 18rpx -14rpx rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  margin: -50rpx 32rpx 0;
  position: relative;
  padding: 32rpx;
  box-sizing: border-box;
}
.thebag .money {
  color: #FA573E;
}
.thebag .money .icon {
  font-size: 32rpx;
}
.thebag .money .text {
  font-size: 44rpx;
}
.thebag .gmNumber-number-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 34rpx;
}
.thebag .gmNumber-number-box .gmNumber {
  font-size: 28rpx;
  color: #14181A;
}
.thebag .gmNumber-number-box .number-box .border {
  width: 44rpx;
  height: 44rpx;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.thebag .gmNumber-number-box .number-box .minus {
  border: 2rpx solid #1DABF2;
}
.thebag .gmNumber-number-box .number-box .plus {
  background: #1DABF2;
}
.thebag .conter-text {
  margin-top: 50rpx;
}
.thebag .conter-text .tito {
  position: relative;
  font-weight: 700;
  font-size: 32rpx;
  color: #14181A;
  margin-left: 40rpx;
}
.thebag .conter-text .tito::after {
  content: "";
  width: 24rpx;
  height: 24rpx;
  background: linear-gradient(180deg, #04D9D9 0%, #1DABF2 100%);
  border-radius: 2rpx;
  position: absolute;
  left: -40rpx;
  top: 10rpx;
  -webkit-transform: rotateZ(45deg);
          transform: rotateZ(45deg);
}
.thebag .conter-text .icon-text-number {
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
}
.thebag .conter-text .icon-text-number .icon-text {
  flex: 1;
  display: flex;
}
.thebag .conter-text .icon-text-number .icon-text .number {
  width: 110rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.thebag .conter-text .icon-text-number .icon-text .number::after, .thebag .conter-text .icon-text-number .icon-text .number::before {
  flex: 1;
  display: block;
  content: "";
  width: 4rpx;
  background-color: #1DABF2;
}
.thebag .conter-text .icon-text-number .icon-text .number::after {
  background-color: var(--line-after);
}
.thebag .conter-text .icon-text-number .icon-text .number::before {
  background-color: var(--line-before);
}
.thebag .conter-text .icon-text-number .icon-text .number > view {
  background-color: #fff;
  flex: 1;
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%) rotateZ(45deg);
          transform: translate(-50%, -50%) rotateZ(45deg);
  width: 50rpx;
  height: 50rpx;
  border: 4rpx solid;
  border-image: linear-gradient(180deg, #04d9d9, #1dabf2) 4 4;
  display: grid;
  place-content: center;
}
.thebag .conter-text .icon-text-number .icon-text .number > view view {
  -webkit-transform: rotateZ(-45deg);
          transform: rotateZ(-45deg);
}
.thebag .conter-text .icon-text-number .icon-text .text {
  flex: 1;
  font-size: 28rpx;
  color: #2E3133;
  padding: 16rpx;
  box-sizing: border-box;
}
