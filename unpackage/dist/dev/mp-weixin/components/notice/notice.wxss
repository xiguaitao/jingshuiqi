.notice {
  width: 686rpx;
  margin: 48rpx auto;
  position: relative;
}
.notice .notice-conter-text {
  position: relative;
  padding-bottom: 1rpx;
  box-sizing: border-box;
}
.notice .notice-conter-text .notice-tito {
  padding: 16rpx 0;
  box-sizing: border-box;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.notice .notice-conter-text .notice-tito .image {
  position: absolute;
  width: 100%;
  height: 100%;
}
.notice .notice-conter-text .notice-tito .image image {
  width: 100%;
  height: 100%;
}
.notice .notice-conter-text .notice-tito .way {
  position: relative;
  font-size: 32rpx;
  color: #FFFFFF;
  margin-left: 65rpx;
  font-weight: 700;
  font-family: PingFang SC, PingFang SC;
}
.notice .notice-conter-text .notice-tito .way::after {
  content: "";
  width: 20rpx;
  height: 20rpx;
  background: #FFFFFF;
  border-radius: 2rpx;
  position: absolute;
  left: -32rpx;
  top: 15rpx;
  -webkit-transform: rotateZ(45deg);
          transform: rotateZ(45deg);
}
.notice .notice-conter-text .notice-tito .more {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #000;
  margin-right: 24rpx;
  position: relative;
  margin-bottom: 10rpx;
}
.notice .notice-conter-text .conter-text {
  background-color: #FFFFFF;
  margin: 8rpx;
}
.notice .notice-conter-text .conter-text .corten {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #E1E4E6;
}
.notice .notice-conter-text .conter-text .corten .videotext {
  font-weight: 600;
  font-size: 28rpx;
  color: #2E3033;
}
.notice .notice-conter-text .conter-text .corten .time {
  font-size: 24rpx;
  color: #B1B2B2;
}

