.commodity .corten-list {
  margin-top: 32rpx;
  margin-bottom: 32rpx;
  display: flex;
  flex-wrap: wrap;
  grid-gap: 22rpx;
}
.commodity .corten-list .corten {
  width: 48%;
  height: 528rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 8rpx 16rpx 0rpx rgba(3, 18, 26, 0.05);
  border-radius: 8rpx 8rpx 8rpx 8rpx;
  position: relative;
  overflow: hidden;
}
.commodity .corten-list .corten .image {
  width: 332rpx;
  height: 336rpx;
  position: relative;
}
.commodity .corten-list .corten .image image {
  width: 100%;
  height: 100%;
}
.commodity .corten-list .corten .image .text {
  position: absolute;
  bottom: 16rpx;
  left: 24rpx;
  font-size: 20rpx;
  color: #FFFFFF;
  background: #33333355;
  border-radius: 18rpx;
  padding: 0 12rpx;
}
.commodity .corten-list .corten .corten-bottom {
  padding: 24rpx;
  box-sizing: border-box;
}
.commodity .corten-list .corten .corten-bottom .tito {
  font-weight: 700;
  font-size: 32rpx;
  color: #2E3133;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.commodity .corten-list .corten .corten-bottom .text-money-yue {
  color: "#FA573E";
  margin-top: 16rpx;
  color: #FA573E;
}
.commodity .corten-list .corten .corten-bottom .text-money-yue .icon {
  font-size: 28rpx;
}
.commodity .corten-list .corten .corten-bottom .text-money-yue .money {
  font-size: 36rpx;
}
.commodity .corten-list .corten .corten-bottom .text-money-yue .yue {
  font-size: 24rpx;
}
.commodity .corten-list .corten .corten-bottom .deleMoney {
  font-size: 24rpx;
  color: #AFB1B2;
  text-decoration: line-through;
}
.commodity .corten-list .corten .image-fenx {
  position: absolute;
  bottom: -10rpx;
  right: 0;
}
.commodity .corten-list .corten .image-fenx .invite {
  width: 80rpx;
  height: 80rpx;
  background: transparent;
  border: none;
  margin: 0;
  padding: 0;
}
.commodity .corten-list .corten .image-fenx .invite::after {
  content: none;
}
.commodity .corten-list .corten .image-fenx image {
  width: 80rpx;
  height: 80rpx;
}

