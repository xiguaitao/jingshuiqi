.box {
  min-height: 100vh;
  background-color: #F0F3F5;
  padding-bottom: 30rpx;
}
.image-sacn {
  margin: 48rpx 0;
  text-align: center;
}
.image-sacn image {
  width: 400rpx;
  height: 400rpx;
}
.sacn-text {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 64rpx;
}
.sacn-text .text {
  width: 296rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #04D9D9 0%, #1DABF2 100%);
  border-radius: 8rpx;
  text-align: center;
  line-height: 88rpx;
  color: #FFF;
}
.sacn-text .qs {
  background: linear-gradient(135deg, #1DABF2 0%, #4981F2 100%);
}
.conter-text {
  margin: 32rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 8rpx 16rpx 0rpx rgba(3, 18, 26, 0.05);
  border-radius: 8rpx;
  padding: 32rpx;
  box-sizing: border-box;
}
.conter-text .tito {
  position: relative;
  font-weight: 700;
  font-size: 32rpx;
  color: #14181A;
  margin-left: 40rpx;
}
.conter-text .tito::after {
  content: "";
  width: 24rpx;
  height: 24rpx;
  background: linear-gradient(180deg, #04D9D9 0%, #1DABF2 100%);
  border-radius: 2rpx;
  position: absolute;
  left: -40rpx;
  top: 10rpx;
  -webkit-transform: rotateZ(45deg);
          transform: rotateZ(45deg);
}
.conter-text .icon-text-number {
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
}
.conter-text .icon-text-number .icon-text {
  flex: 1;
  display: flex;
}
.conter-text .icon-text-number .icon-text .number {
  width: 110rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.conter-text .icon-text-number .icon-text .number::after, .conter-text .icon-text-number .icon-text .number::before {
  flex: 1;
  display: block;
  content: "";
  width: 4rpx;
  background-color: #1DABF2;
}
.conter-text .icon-text-number .icon-text .number::after {
  background-color: var(--line-after);
}
.conter-text .icon-text-number .icon-text .number::before {
  background-color: var(--line-before);
}
.conter-text .icon-text-number .icon-text .number > view {
  background-color: #fff;
  flex: 1;
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%) rotateZ(45deg);
          transform: translate(-50%, -50%) rotateZ(45deg);
  width: 50rpx;
  height: 50rpx;
  border: 4rpx solid;
  border-image: linear-gradient(180deg, #04d9d9, #1dabf2) 4 4;
  display: grid;
  place-content: center;
}
.conter-text .icon-text-number .icon-text .number > view view {
  -webkit-transform: rotateZ(-45deg);
          transform: rotateZ(-45deg);
}
.conter-text .icon-text-number .icon-text .text {
  flex: 1;
  font-size: 28rpx;
  color: #2E3133;
  padding: 16rpx;
  box-sizing: border-box;
}

