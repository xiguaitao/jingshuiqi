.box {
  background-color: #fff;
}
.box .bg image {
  width: 100%;
  height: 532rpx;
}
.box .login-box {
  padding: 0 94rpx;
  box-sizing: border-box;
  margin-top: 128rpx;
  margin-bottom: 64rpx;
}
.box .login-box .zhmm {
  display: flex;
  text-align: end;
  font-family: PingFang SC, PingFang SC;
  font-weight: 400;
  font-size: 28rpx;
  color: #14171A;
  line-height: 33rpx;
  justify-content: space-between;
}
.box .dl-button {
  margin: 0 94rpx;
  background: #2590FA;
  border-radius: 100rpx;
  color: #fff;
  padding: 22rpx 0;
  box-sizing: border-box;
  text-align: center;
  margin-bottom: 32rpx;
}
.box .zc-button {
  margin: 0 94rpx;
  border: 1px solid #2590FA;
  color: #2590FA;
  border-radius: 100rpx;
  padding: 22rpx 0;
  box-sizing: border-box;
  text-align: center;
}
.box .image-text {
  text-align: center;
  margin-top: 244rpx;
}
.box .image-text .image {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
}
.box .image-text .text {
  font-size: 32rpx;
  color: #14171A;
  font-weight: 700;
  margin-top: 36rpx;
}
.box .login {
  width: 548rpx;
  height: 92rpx;
  background: #2590FA;
  border-radius: 100rpx 100rpx 100rpx 100rpx;
  margin: 0 auto;
  text-align: center;
  color: #FFF;
  line-height: 92rpx;
  font-size: 28rpx;
  margin-top: 64rpx;
}

